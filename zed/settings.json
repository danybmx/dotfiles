{
  "assistant": {
    "default_model": {
      "provider": "copilot_chat",
      "model": "gpt-4o"
    },
    "version": "2"
  },
  "project_panel": {
    "dock": "right"
  },
  "vim_mode": false,
  "relative_line_numbers": true,
  "linked_edits": true,
  "soft_wrap": "prefer_line",
  "ui_font_size": 15,
  "buffer_font_size": 15,
  "buffer_font_family": "Zed Plex Mono",
  "scrollbar": {
    "show": "never"
  },
  "scroll_beyond_last_line": "one_page",
  "vertical_scroll_margin": 10,
  "gutter": {
    "code_actions": true
  },
  "theme": {
    "mode": "system",
    "light": "Fleet Light",
    "dark": "Tokyo Night"
  },
  "format_on_save": "language_server",
  "languages": {
    "JavaScript": {
      "code_actions_on_format": {
        "source.fixAll.eslint": true
      }
    }
  }
}
